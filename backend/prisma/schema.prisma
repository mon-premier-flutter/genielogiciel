generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Exemple de table pour tester (tu pourras la modifier plus tard)
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String
  purchases Purchase[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  date      DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}